<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Status</th>
      <th>Posted at</th>
      <th>Reason</th>
      <th>Rank</th>
      <th>Summary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <th scope="row"><%= link_to post.title, post%></th>
        <td><%= post.body %></td>
        <td><%= post.status %></td>
        <td><%= post.posted_at %></td>
        <td><%= post.reason %></td>
        <td><%= post.rank %></td>
        <td><%= post.summary %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
