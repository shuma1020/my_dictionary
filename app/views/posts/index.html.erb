<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>公開状況</th>
      <th>経緯</th>
      <th>投稿日</th>
      <th>重要度</th>
      <th>要約</th>
      <th>ジャンル</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @posts.each do |post| %>
        <tr>
          <th scope="row"><%= link_to post.title, post %></th>
          <td><%= post.body %></td>
          <td><%= post.status %></td>
          <td><%= post.reason %></td>
          <td><%= post.posted_at.strftime("%Y-%m-%d") %></td>
          <td><%= post.rank %></td>
          <td><%= post.summary %></td>
          <% post.genres.each do |genre| %>
            <td><%= genre.name %></td>
          <% end %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
  </tbody>
</table>

<br>



