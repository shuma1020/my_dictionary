<p id="notice"><%= notice %></p>
<div id="wrapper">
  <aside id="sidebar">
    <%= render "shared/sidebar"%>
  </aside>
  <div class="table-responsive">
    <table class="list">
      <tr>
        <th class="list__item1">タイトル</th>
        <th class="list__item2">内容</th>
        <th class="list__item3">公開状況</th>
        <th class="list__item4">経緯</th>
        <th class="list__item5">投稿日</th>
        <th class="list__item7">要約</th>
        <th class="list__item8">参考URL</th>
        <th class="list__item9">ジャンル</th>
        <th class="list__item10">編集する</th>
        <th class="list__item11">削除する</th>
      </tr>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, mypage_post_path(post) %></td>
          <td><%= post.body.truncate(15) %></td>
          <td><%= post.status %></td>
          <td><%= post.reason %></td>
          <td><%= post.posted_at.strftime("%m-%d") %></td>
          <td><%= post.summary %></td>
          <td><%= link_to post.url, post.url  %></td>
          <% post.genres.each do |genre| %>
            <td><%= genre.name %></td>
          <% end %>
          <td><%= link_to 'Edit', edit_mypage_post_path(post) %></td>
          <td><%= link_to 'Destroy', mypage_post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </table>
    <%= paginate @posts%>
    <br>
  </div>
</div>


